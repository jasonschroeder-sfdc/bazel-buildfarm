{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":approveMajorUpdates",
    ":label(dependencies)",
    ":semanticCommitType(chore)",
    "docker:pinDigests",
    "helpers:pinGitHubActionDigests"
  ],
  "prConcurrentLimit": 2,
  "packageRules": [
    {
      "groupName": "Bazel",
      "matchPackageNames": [
        "bazel"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor"
      ],
      "automerge": true
    },
    {
      "groupName": "tini",
      "description": "tini x86_64 and arm64v8",
      "matchPackageNames": [
        "tini*"
      ]
    },
    {
      "groupName": "rules_proto",
      "description": "disable rules_proto as it's transitive and Buildfarm does not use it",
      "matchPackageNames": [
        "rules_proto"
      ],
      "enabled": false
    },
    {
      "groupName": "Maven deps",
      "description": "Maven dependencies need to be pinned by 'REPIN=1 bazelisk run @maven//:pin && git add maven_install.json && git commit' to pass CI, then they can be auto-merged after approval",
      "matchManagers": ["bazel"],
      "matchDatasources": ["maven"],
      "dependencyDashboardApproval": true,
      "automerge": true,
      "prConcurrentLimit": 1
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "schedule": [
        "before 4am on the first day of the month"
      ],
      "automerge": true
    }
  ]
}
